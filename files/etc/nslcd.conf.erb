uid           <%= @user %>
gid           <%= @group %>

base          <%= @base_dn %>
uri           ldap://<%= @server %>/
ssl           start_tls
tls_cacertdir /etc/openldap/cacerts

ldap_version  3

binddn        <%= @bind_dn %>
bindpw        <%= @bind_pass %>

# Added for INFRA-1478 - ELB disconnects causing lots of errors in logs
idle_timelimit <%= @idle_timelimit %>

# Added for INFRA-4586 - pam ldap shouldn't look at disabled organizational units
base passwd <%= @people_dn %>

# Added for INFRA-5153 - pam ldap should look at the services organization unit
base passwd <%= @services_dn %>
